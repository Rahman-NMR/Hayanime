<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:padding="@dimen/recyclerview_corner_padding_small">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/main_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/placeholder" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/media_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_left_corner_16"
        android:gravity="end"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:text="@string/unknown_label"
        android:textAlignment="textEnd"
        android:textColor="?attr/colorSurface"
        android:textSize="16sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@+id/main_picture"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/main_picture"
        app:layout_constraintTop_toTopOf="@+id/main_picture" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/helper_flow_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_top_right_corner_16"
        android:orientation="vertical"
        android:paddingVertical="6dp"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        app:constraint_referenced_ids="score, num_scoring_user"
        app:flow_horizontalAlign="start"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/main_picture"
        app:layout_constraintEnd_toStartOf="@+id/btn_edit_mylist"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_star_24px_rounded"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        android:text="@string/not_available"
        android:textColor="?attr/colorSurface"
        android:textSize="16sp"
        android:textStyle="bold"
        app:drawableTint="?attr/colorSurface" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/num_scoring_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_group_24px_rounded"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:text="@string/not_available"
        android:textColor="?attr/colorSurface"
        android:textSize="14sp"
        app:drawableTint="?attr/colorSurface"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_edit_mylist"
        style="?attr/materialIconButtonFilledStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="12dp"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_edit_note_24px_rounded"
        app:iconSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/main_picture"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/helper_flow_season_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:constraint_referenced_ids="start_season, status"
        app:flow_wrapMode="chain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_picture" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/start_season"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="middle"
        android:gravity="start"
        android:maxLines="1"
        android:text="@string/unknown_label"
        android:textAlignment="textStart"
        android:textSize="14sp"
        app:layout_constrainedWidth="true" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="middle"
        android:gravity="end"
        android:maxLines="1"
        android:text="@string/unknown_label"
        android:textAlignment="textEnd"
        android:textSize="14sp"
        app:layout_constrainedWidth="true"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/unknown_label"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/helper_flow_season_status" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/helper_flow_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:constraint_referenced_ids="nsfw, rating"
        app:flow_horizontalGap="8dp"
        app:flow_wrapMode="chain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/nsfw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corner_16"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:text="@string/label_nsfw"
        android:textColor="?attr/colorSurface"
        android:visibility="visible"
        tools:visibility="visible" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/rating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/unknown_label"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/unknown_label"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/helper_flow_rating" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/helper_flow_sum_episodes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:constraint_referenced_ids="helper_flow_episode, avg_eps_per_duration"
        app:flow_horizontalBias="0.0"
        app:flow_horizontalGap="12dp"
        app:flow_horizontalStyle="packed"
        app:flow_verticalGap="6dp"
        app:flow_wrapMode="chain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/genres" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/helper_flow_episode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corner_16"
        android:paddingStart="1dp"
        android:paddingTop="1dp"
        android:paddingEnd="12dp"
        android:paddingBottom="1dp"
        app:constraint_referenced_ids="num_episodes, label_episode"
        app:flow_horizontalGap="8dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/num_episodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corner_16"
        android:backgroundTint="?attr/colorSurface"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:text="@string/unknown_symbol"
        android:textColor="?attr/colorSurfaceInverse" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_episode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_episode"
        android:textColor="?attr/colorSurface"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/avg_eps_per_duration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="@string/label_episode_duration_minutes"
        android:textSize="16sp"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/studio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/vertical_stroke"
        android:drawableStart="@drawable/ic_camera_indoor_24px_rounded"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:paddingVertical="6dp"
        android:text="@string/unknown_label"
        android:textSize="16sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/helper_flow_sum_episodes" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/watching_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_bottom_corner_16"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:text="@string/unknown_label"
        android:textColor="?attr/colorSurface"
        android:visibility="visible"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/studio"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>