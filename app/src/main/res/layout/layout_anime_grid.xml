<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:padding="@dimen/recyclerview_corner_padding_small">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/main_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_placeholder" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/media_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.9"
        android:background="@drawable/bg_bottom_left_corner_16"
        android:gravity="end"
        android:paddingVertical="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:text="@string/label_unknown"
        android:textAlignment="textEnd"
        android:textColor="?attr/colorSurfaceVariant"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@+id/main_picture"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/main_picture"
        app:layout_constraintTop_toTopOf="@+id/main_picture" />

    <LinearLayout
        android:id="@+id/layout_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:alpha="0.9"
        android:background="@drawable/bg_top_bottom_right_corner_10"
        android:orientation="vertical"
        android:paddingVertical="4dp"
        android:paddingStart="4dp"
        android:paddingEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_edit_mylist"
        app:layout_constraintEnd_toStartOf="@+id/btn_edit_mylist"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_star_24px_rounded"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/not_available"
            android:textColor="?attr/colorSurfaceVariant"
            android:textSize="14sp"
            android:textStyle="bold"
            app:drawableTint="?attr/colorSurfaceVariant" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/num_scoring_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_group_24px_rounded"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/not_available"
            android:textColor="?attr/colorSurfaceVariant"
            android:textSize="12sp"
            app:drawableTint="?attr/colorSurfaceVariant" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_edit_mylist"
        style="?attr/materialIconButtonFilledStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:alpha="0.9"
        android:contentDescription="@string/description_edit_this_anime"
        android:padding="12dp"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_edit_note_24px_rounded"
        app:iconSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/main_picture"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/layout_season_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_picture">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/start_season"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:gravity="start"
            android:maxLines="1"
            android:text="@string/label_unknown"
            android:textAlignment="textStart"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="14sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:ellipsize="middle"
            android:gravity="end"
            android:maxLines="1"
            android:text="@string/label_unknown"
            android:textAlignment="textEnd"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="14sp"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/label_unknown"
        android:textColor="?attr/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_season_status" />

    <LinearLayout
        android:id="@+id/layout_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/nsfw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_corner_16"
            android:backgroundTint="?attr/colorErrorContainer"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="@string/label_nsfw"
            android:textColor="?attr/colorOnErrorContainer"
            android:visibility="gone"
            tools:visibility="visible" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:gravity="center_vertical"
            android:text="@string/label_unknown"
            android:textColor="?attr/colorOnSurfaceVariant" />
    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/label_unknown"
        android:textColor="?attr/colorSecondary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_rating" />

    <LinearLayout
        android:id="@+id/layout_sum_episodes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/genres">

        <LinearLayout
            android:id="@+id/layout_episode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginEnd="6dp"
            android:background="@drawable/bg_corner_16"
            android:orientation="horizontal"
            android:paddingStart="1dp"
            android:paddingTop="1dp"
            android:paddingEnd="12dp"
            android:paddingBottom="1dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/num_episodes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_corner_16"
                android:backgroundTint="?attr/colorSurfaceVariant"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="@string/unknown_symbol"
                android:textColor="?attr/colorSurfaceInverse" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/label_episode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxWidth="65dp"
                android:maxLines="1"
                android:text="@string/label_episode"
                android:textColor="?attr/colorSurfaceVariant" />
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/avg_eps_per_duration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="end|center_vertical"
            android:maxLines="2"
            android:text="@string/label_episode_duration"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="16sp" />
    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/studio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/vertical_stroke"
        android:drawableStart="@drawable/ic_camera_indoor_24px_rounded"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:paddingVertical="6dp"
        android:text="@string/label_unknown"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="16sp"
        app:drawableTint="?attr/colorOnSurfaceVariant"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_sum_episodes" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/watching_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_bottom_corner_16"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:text="@string/label_unknown"
        android:textColor="?attr/colorSurfaceVariant"
        android:visibility="gone"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/studio"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>