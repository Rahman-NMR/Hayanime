<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/settings_nsfw_title">

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:iconSpaceReserved="false"
            app:key="show_nsfw_content"
            app:summaryOff="@string/pref_nsfw_search_summary_off"
            app:summaryOn="@string/pref_nsfw_search_summary_on"
            app:title="@string/pref_nsfw_search_title" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:iconSpaceReserved="false"
            app:key="show_nsfw_suggestions"
            app:summaryOff="@string/pref_nsfw_suggestions_summary_off"
            app:summaryOn="@string/pref_nsfw_suggestions_summary_on"
            app:title="@string/pref_nsfw_suggestions_title" />
    </PreferenceCategory>
</PreferenceScreen>